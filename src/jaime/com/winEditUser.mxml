			private function findIndex(dp:ArrayCollection, prop:String, what:String ):int 
			{
				for(var k:int=0; k<dp.length; k++) {
					if(String(dp.getItemAt(k)[prop])==what) return k;
				}
				return -1;
			}
			private function getIdxacNiveles(nivel:String):int
			{
				
